<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="logger" scope="prototype" class="org.slf4j.LoggerFactory" factory-method="getLogger">
		<constructor-arg name="name" value="ida-logger"/>
	</bean>
	<bean id="chat-logger" scope="prototype" class="org.slf4j.LoggerFactory" factory-method="getLogger">
		<constructor-arg name="name" value="ida-chat-logger"/>
	</bean>
</beans>
